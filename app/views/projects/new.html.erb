<div class="content">
  <h2>Create a Project</h2>

  <%= semantic_form_for @project, :class => '' do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :name, :hint => "Every project needs a name." %>
    <% end %>
    <%= f.buttons do %>
      <%= f.commit_button :button_html => { :class => "primary" } %>
    <% end %>
  <% end %>
  
</div>